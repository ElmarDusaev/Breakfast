@model Breakfast.Models.Product
@{
    ViewData["Title"] = "Добавить продукцию";
}

    <h1>Обновить продукт</h1>
<hr />


<form asp-action="Edit" class="form-row" method="post" data-ajax="true" data-ajax-method="post" data-ajax-failure="Failed" data-ajax-success="Success">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group col-md-12">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group col-md-12">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group col-md-12">
        <label asp-for="Image" class="control-label"></label>
        <input asp-for="Image" class="form-control" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>

    <div class="form-group col-md-2">
        <label asp-for="Stars" class="control-label"></label>
        <input asp-for="Stars" class="form-control" type="number" min="1" max="5" step="0.1" />
        <span asp-validation-for="Stars" class="text-danger"></span>
    </div>
    <div class="form-group col-md-2">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" type="number" min="1" max="100000" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group col-md-4">
        <label asp-for="CategoryId" class="control-label"></label>
        <select asp-for="CategoryId" class="form-control" asp-items="@ViewBag.Categories">
            <option selected value="">--Выберите категорию--</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <div class="form-group col-md-4">
        <label asp-for="Status" class="control-label"></label>
        @*<select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<ProductStatus>()">*@
        <select asp-for="Status" class="form-control" asp-items="@ViewBag.Status">
            <option selected value="">--Выберите статус--</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <div class="form-group col-md-4">
        <input type="submit" class="btn btn-primary" value="Обновить">
    </div>
</form>


@section Scripts {
    <script src="~/jquery/jquery.min.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
<script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.min.js"></script>
<script src="~/lib/limonte-sweetalert2/sweetalert2.all.min.js"></script>
<script>

    function Success() {
        
        Swal.fire(
            'Успешно!!!',
            'Продукт ' + $("#Name").val() + ' обновлен.',
            'success'
        );
    };

    function Failed() {

        Swal.fire(
            'Ошибка!!!',
            'Продукт не обновлен.',
            'error'
        );
    };




</script>

}
