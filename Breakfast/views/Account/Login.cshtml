@model LoginViewModel
@{
    Layout = "_LayoutLogin";
}

<div class="container h-100">
    <div class="d-flex h-100">
        <div class="m-auto col-md-4 border p-4">
            @*<h5>Авторизация пользователя</h5>*@
            <form asp-action="Login" asp-controller="Account" asp-area="Admin">
                <div class="form-group">
                    <label asp-for="Email">Почтовый адрес</label>
                    <input type="text" asp-for="Email" class="form-control" placeholder="Введите логин"/>
                </div>

                <div class="form-group">
                    <label asp-for="Password">Пароль</label>
                    <input type="password" asp-for="Password" class="form-control" placeholder="Введите пароль"/>
                </div>

                <button class="btn btn-primary btn-block">Войти</button>

            </form>
        </div>
    </div>
</div>


