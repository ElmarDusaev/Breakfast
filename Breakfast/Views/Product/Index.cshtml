@model IList<Product>
@{
    ViewData["Title"] = "Продукция";
}

<h1>Продукция</h1>
<a asp-action="Add" asp-controller="Product" class="btn btn-primary m-3">Добавить</a>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(a => a[0].Name)</th>
            <th>@Html.DisplayNameFor(a => a[0].Price)</th>
            <th>@Html.DisplayNameFor(a => a[0].Stars)</th>
            <th>@Html.DisplayNameFor(a => a[0].Category.Name)</th>
            <th>@Html.DisplayNameFor(a => a[0].Status)</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
<tr>
    <td>
        <a asp-action="edit" asp-controller="product" asp-route-id="@item.Id">
            @item.Name
        </a>
    </td>
    <td>@item.Price</td>
    <td>@item.Stars</td>
    <td>@item.Category.Name</td>
    <td>@item.Status.GetDescription()</td>
</tr>
    }


</table>
